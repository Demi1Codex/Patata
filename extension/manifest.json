{
    "manifest_version": 3,
    "name": "Patata Quick Idea Creator",
    "version": "1.0",
    "description": "Add a button to the Patata page to create ideas quickly without showing the board.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    }
}